<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Clippy.AnswerOverlayWindow"
        Title="Answer"
        Width="800" Height="140"
        MinWidth="300" MinHeight="80"
        Topmost="True"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        CanResize="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">

    <Border Background="#CC1A237E"
            CornerRadius="12"
            Padding="24,12"
            Margin="8">
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,0,16,0">
                <TextBlock x:Name="AnswerText"
                           Text="Waiting for questions..."
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#E0E0E0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </ScrollViewer>

            <!-- Resize grip -->
            <Border x:Name="ResizeGrip"
                    Width="18" Height="18"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Cursor="BottomRightCorner"
                    Background="Transparent"
                    ToolTip.Tip="Drag to resize">
                <Canvas Width="14" Height="14">
                    <Line StartPoint="10,0" EndPoint="0,10"
                          Stroke="#60E0E0E0" StrokeThickness="1.5" />
                    <Line StartPoint="14,0" EndPoint="0,14"
                          Stroke="#60E0E0E0" StrokeThickness="1.5" />
                    <Line StartPoint="14,4" EndPoint="4,14"
                          Stroke="#60E0E0E0" StrokeThickness="1.5" />
                </Canvas>
            </Border>
        </Grid>
    </Border>
</Window>
