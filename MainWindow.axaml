<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Clippy.MainWindow"
        Title="Clippy"
        Width="600" Height="490"
        WindowStartupLocation="CenterScreen">

    <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="20">

        <TextBlock Text="Clippy"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <TextBlock Text="Click the button to hide this window to the menu bar."
                   FontSize="14"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   MaxWidth="300"
                   TextAlignment="Center" />

        <!-- Model connection status and selection -->
        <Border Background="#20808080"
                CornerRadius="8"
                Padding="14,10"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        Spacing="10"
                        VerticalAlignment="Center">

                <!-- Connection indicator dot -->
                <Border x:Name="ConnectionDot"
                        Width="12" Height="12"
                        CornerRadius="6"
                        Background="Gray"
                        VerticalAlignment="Center" />

                <TextBlock x:Name="ConnectionLabel"
                           Text="Checking..."
                           FontSize="13"
                           VerticalAlignment="Center"
                           Foreground="Gray" />

                <ComboBox x:Name="ModelDropdown"
                          MinWidth="200"
                          FontSize="13"
                          PlaceholderText="No models loaded"
                          VerticalAlignment="Center"
                          SelectionChanged="OnModelSelectionChanged" />

                <Button x:Name="RefreshButton"
                        Content="Refresh"
                        Padding="10,5"
                        FontSize="12"
                        VerticalAlignment="Center"
                        Click="OnRefreshClicked" />

            </StackPanel>
        </Border>

        <!-- Whisper transcription model selection -->
        <Border Background="#20808080"
                CornerRadius="8"
                Padding="14,10"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        Spacing="10"
                        VerticalAlignment="Center">

                <TextBlock Text="Whisper:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />

                <ComboBox x:Name="WhisperModelDropdown"
                          MinWidth="240"
                          FontSize="13"
                          PlaceholderText="No models found"
                          VerticalAlignment="Center"
                          SelectionChanged="OnWhisperModelSelectionChanged" />

                <Button x:Name="DownloadWhisperButton"
                        Content="Download"
                        Padding="10,5"
                        FontSize="12"
                        VerticalAlignment="Center"
                        Click="OnDownloadWhisperClicked" />

            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="12">

            <Button Content="Clip-it"
                    Padding="20,10"
                    FontSize="16"
                    Click="OnClipItClicked" />

            <Button x:Name="ListenButton"
                    Content="Listen"
                    Padding="20,10"
                    FontSize="16"
                    Click="OnListenClicked" />

            <Button x:Name="SubtitleButton"
                    Content="Listen+Subtitle"
                    Padding="20,10"
                    FontSize="16"
                    Click="OnSubtitleClicked" />

            <Button Content="Hide to Menu Bar"
                    Padding="20,10"
                    FontSize="16"
                    Click="OnHideClicked" />

        </StackPanel>

        <TextBlock x:Name="StatusText"
                   Text=""
                   FontSize="13"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   MaxWidth="380"
                   TextAlignment="Center"
                   Foreground="Gray" />

    </StackPanel>
</Window>
